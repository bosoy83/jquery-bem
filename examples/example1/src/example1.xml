<?xml version="1.0" encoding="utf-8"?>
<block:b-page
    xmlns:block="urn:bem:block"
    xmlns:elem="urn:bem:elem"
    xmlns:mod="urn:bem:mod"
>

    <elem:body>
        <block:b-table>
            <elem:row>
                <elem:cell mod:type="label">Some input:</elem:cell>
                <elem:cell><block:b-input mod:first="yes" /></elem:cell>
                <elem:cell><block:b-button mod:first="yes">Button 1</block:b-button></elem:cell>
                <elem:cell mod:type="result" mod:result="first" />
            </elem:row>
            <elem:row>
                <elem:cell mod:type="label">Another input:</elem:cell>
                <elem:cell><block:b-input mod:last="yes" /></elem:cell>
                <elem:cell><block:b-button mod:last="yes">Button 2</block:b-button></elem:cell>
                <elem:cell mod:type="result" mod:result="last" />
            </elem:row>
        </block:b-table>
    </elem:body>

</block:b-page>
